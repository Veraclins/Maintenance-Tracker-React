{
  "name": "maintenance-tracker-react",
  "version": "1.0.0",
  "description": "A maintenance tracker app using an Expressjs REST API and React Frontend",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "heroku-postbuild": "npm run build",
    "build:client": "webpack -p",
    "build:server": "babel src/server -D --out-dir dist/server --source-maps",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js --exec babel-node --presets babel-preset-env",
    "test:server": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha --file test/prep/PrepDb.js --exit",
    "test:client": "cross-env NODE_ENV=test jest --coverage -u",
    "test": "npm run test:server && npm run test:client",
    "update:snap": "jest --coverage -u",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "migrate": "babel-node src/server/controllers/data.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build:client && npm run build:server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veraclins/Maintenance-Tracker-React.git"
  },
  "keywords": [
    "API",
    "Es6+",
    "RESTFUL",
    "Andela",
    "TDD",
    "React",
    "Expressjs",
    "Nodejs"
  ],
  "author": "Agada Clinton Innocent (Veracity)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Veraclins/Maintenance-Tracker-React/issues"
  },
  "homepage": "https://github.com/Veraclins/Maintenance-Tracker-React#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.18.3",
    "connected-react-router": "^4.5.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "express": "^4.16.3",
    "file-loader": "^2.0.0",
    "history": "^4.7.2",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "pg": "^7.4.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.0.0",
    "react-test-renderer": "^16.5.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "swagger-ui-express": "^4.0.1",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.5",
    "css-loader": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "glob-all": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^11.8.0",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.22.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "engines": {
    "node": "8.11.3"
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "plugins": [
      "istanbul"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupTests.js",
    "testPathIgnorePatterns": [
      "<rootDir>/src/server/",
      "<rootDir>/test/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "**/src/client/?(*).js?(x)",
      "!**/src/client/*.js"
    ],
    "coverageReporters": [
      "cobertura",
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/client/mocks/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/src/client/mocks/styleMock.js"
    }
  }
}
