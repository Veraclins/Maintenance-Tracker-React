{
    "extends": "airbnb",
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    },
    "rules": {
      "consistent-return": 0,
      "no-param-reassign": 0,
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "import/no-unresolved": [2, { "commonjs": true }],
      "import/extensions": ["error", "as-needed"],
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "curly": ["error", "multi-line"]
    }
  }
  